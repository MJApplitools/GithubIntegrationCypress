{
 
   "background": {
      "scripts": ["background.js"]
    },
  
  "name": "Quicklitools",
  "description": "Enables quick stuff for Applitools advanced users!",
  "version": "1.0.2",

  "manifest_version": 2,
  
  "browser_action":{
    "default_icon":"icon.png",
    "default_popup":"popup.html"
  },

  "permissions":[
    "tabs",
    "activeTab",
    "<all_urls>"
  ],

 "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"

}